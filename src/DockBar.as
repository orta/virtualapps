package {	import flash.display.*;	import flash.events.*;	import flash.net.URLLoader;	import flash.net.URLRequest;	import flash.events.ErrorEvent;	import flash.events.MouseEvent;	import flash.display.Loader;	import flash.filters.DropShadowFilter;	import flash.text.TextField;		//this baby should be both DOCK and TASKBAR		public class DockBar extends Sprite{				var isDock:Boolean;		var myButtons:Array = new Array();		var mOS:OS;				public function DockBar(myOS:OS, isDock = true):void {			mOS = myOS;			this.isDock = isDock;			update();		}				public function update():void{      if(numChildren > 1){        removeChildAt(0);      }      			if(isDock){			  var textBit:TextField = new TextField();				for each(var app:String in mOS.listOfApps){				  if(app != "null"){  				  textBit.text += app + "\n";					  }				}				textBit.selectable = false;				addChild(textBit);							}else {			  trace("list of windows")				for each(var winder:String in mOS.listOfUserWindows){      				trace(" " + winder);				}			}		}					}}