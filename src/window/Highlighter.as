/**   *	purely cosmetic class for showing the area that you can click on   *     *   *	@langversion ActionScript 3.0   *	@playerversion Flash 9.0   *   *	@author orta   *	@since  2008-06-14   */package window{  import flash.display.Sprite;  import flash.display.Graphics;  import flash.events.MouseEvent;  import flash.events.TimerEvent;  import flash.text.TextField;  import flash.utils.*;  import flash.filters.DropShadowFilter;  import visor.lt.uza.utils.*;	import gs.TweenLite;  public class Highlighter extends Sprite {    private var _height:int;    private var _width:int;    public var colour:uint;    public var text:String;    public var showBorder:Number = 0;    private var $:Global = Global.init();    public function Highlighter(w:Number, h:Number, input:String ="", c:uint = 0xbbcfeb) {      _height = h;      _width = w;      colour = c;      this.useHandCursor = true;      this.buttonMode = true;      if(input != null) {        text = input;       }      else{        text = "";      }      addEventListener(MouseEvent.MOUSE_OVER, onMouseOver);      addEventListener(MouseEvent.MOUSE_OUT, onMouseOut);      alpha = 0.3;      drawme();          }    public function onMouseOver(event:MouseEvent = null):void {			      TweenLite.to(this, 0.5, {alpha:0.7});  		    }    public function onMouseOut(event:MouseEvent = null):void {      TweenLite.to(this, 0.5, {alpha:0.01});          }        public function drawme():void {        graphics.clear();        graphics.beginFill(colour);               /* _width = w;_width = w;graphics.lineTo(_width,0);        graphics.lineTo(_width, _height);colour        graphics.lineTo(0, _height);        graphics.lineTo(0,0);*/        graphics.drawRect(0,0, _width, _height);        graphics.endFill();            }    public function addText():void  {			      var textBit:TextField = new TextField();      textBit.text = text;      textBit.selectable = false;      addChild(textBit);      textBit.filters = [new DropShadowFilter(0.2, 0, 1, 0.5, 1, 1, 1, 1)];    }		    public function removeText():void    {	      while(numChildren != 0){        removeChildAt(0);      }    }		 public override function toString():String {		  return "hilite: " + text;		}		  }}